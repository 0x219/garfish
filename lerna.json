{
  "version": "0.0.5",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "packages/tools/*"
      ],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "hoist": true,
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/runtime/core",
    "packages/runtime/loader",
    "packages/runtime/hooks",
    "packages/runtime/utils",
    "packages/runtime/plugins/**",
    "packages/tools/**"
  ]
}
