{
  "version": "0.0.53-0.0.59-alpha.0.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "packages/tools/*"
      ],
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    },
    "bootstrap": {
      "ignore": "component-*",
      "hoist": true,
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/runtime/*",
    "packages/tools/*",
    "dev/main",
    "dev/react",
    "dev/subApp",
    "dev/vue",
    "dev/vue2",
    "website"
  ],
  "nohoist": [
    "website/**"
  ]
}
