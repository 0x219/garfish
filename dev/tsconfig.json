{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es6",
    "outDir": "dist",
    "module": "esnext",
    "lib": ["es6","dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "*/src",
    "./config.json"
  ]
}
