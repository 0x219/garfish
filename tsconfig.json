{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "ESNext",
    "target": "es2016",
    "resolveJsonModule": true,
    "lib": ["es6","dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@garfish/*": ["packages/runtime/*/src"]
    }
  },
  "include": [
    "packages/runtime/*/src",
    "packages/runtime/*/__tests__",
    "packages/runtime/global.d.ts"
  ]
}
